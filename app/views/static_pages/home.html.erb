<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <p><%= current_user.name %>さんの感想記事の検索</p>
      <%= form_tag root_path, :method => 'get' do %>
      <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "検索する", :name => nil,class: "btn btn-lg btn-primary"  %>
      </p>
      <% end %>
      <h3><%= current_user.name %>さんの感想記事一覧(<%= current_user.microposts.count %>記事)</h3>
        <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="enter">
    <h1>DokusyoLog</h1>
    <h1>(ログイン画面にあるテスト用のEmailとパスワードでログインしてください)</h1>
    <h2>読書体験を豊かにするディスカバリーサービス</h2>

    <%= link_to "新規ユーザーとして登録する", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
