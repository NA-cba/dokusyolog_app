<% provide(:title, '全ての投稿一覧 ') %>
<h1>全てのユーザーの感想記事一覧</h1>

<p>全てのユーザー の感想記事の検索</p>
<%= form_tag(index_path, :method => 'get' ) do %>
  <%= text_field_tag :search %>
  <%= submit_tag '検索する', :name => nil,class: "btn btn-lg btn-primary"  %>
<% end %>

<ul class="microposts">
  <%= render @microposts %>
</ul>

<%= will_paginate @microposts, :previous_label => ' < 前へ', :next_label => '次へ >' %>
